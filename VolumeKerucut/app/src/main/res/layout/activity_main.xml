<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jari-jari : "
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Input nilai jari-jari"
        android:ems="10"
        android:layout_toRightOf="@+id/textView"
        android:id="@+id/jarijari"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tinggi   : "
        android:layout_below="@+id/jarijari"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:id="@+id/txttinggi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Input nilai tinggi"
        android:ems="10"
        android:layout_toRightOf="@+id/txttinggi"
        android:layout_marginTop="50dp"
        android:id="@+id/tinggi"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung"
        android:layout_below="@+id/txttinggi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/hitung"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume"
        android:layout_below="@+id/hitung"
        android:layout_alignRight="@+id/tinggi"
        android:layout_alignEnd="@+id/tinggi"
        android:layout_marginTop="30dp"
        android:id="@+id/volume"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textStyle="bold"/>

</RelativeLayout>